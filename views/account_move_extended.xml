<odoo>
    <!-- Invoice Line Form View -->
    <record id="view_move_line_form_inherit_length" model="ir.ui.view">
        <field name="name">account.move.line.form.length</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add length field after quantity in form view -->
            <xpath expr="//field[@name='quantity']" position="after">
                <field name="length"/>
            </xpath>
        </field>
    </record>

