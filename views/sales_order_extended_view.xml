<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sale_order_line_inherit_length" model="ir.ui.view">
        <field name="name">sale.order.line.form.length</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Insert LENGTH after QTY block -->
            <xpath expr="//field[@name='order_line']//form//div[@name='ordered_qty']" position="after">
                <div>
                    <label for="length"/>
                    <field name="length"/>
                </div>
            </xpath>

            <xpath expr="//field[@name='order_line']//list//field[@name='price_unit']" position="before">
                <field name="length" optional="show"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//kanban//main/div[@class='text-muted'][contains(.,'Quantity')]"
                   position="after">
                <div class="text-muted">
                    Length:
                    <field name="length"/>
                </div>
            </xpath>

        </field>
    </record>
</odoo>