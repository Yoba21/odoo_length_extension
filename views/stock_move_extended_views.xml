<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_form_inherit_length" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.length</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>

        <field name="arch" type="xml">

            <!-- Add LENGTH to operations list, after delivered quantity -->
            <xpath expr="//field[@name='move_ids_without_package']//list//field[@name='quantity']"
                   position="after">
                <field name="length"/>
            </xpath>

        </field>
    </record>
</odoo>
