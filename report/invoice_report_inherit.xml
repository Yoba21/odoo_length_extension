<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_length"
              inherit_id="account.report_invoice_document">

        <!-- 1️⃣ Add LENGTH column header after Quantity -->
        <xpath expr="//th[contains(., 'Quantity')]" position="after">
            <th class="text-end">Length(Meters)</th>
        </xpath>

        <!-- 2️⃣ Add LENGTH value inside each line after quantity -->
        <xpath expr="//td[@name='td_quantity']" position="after">
            <td class="text-end">
                <span t-field="line.length"/>
            </td>
        </xpath>

    </template>
</odoo>
